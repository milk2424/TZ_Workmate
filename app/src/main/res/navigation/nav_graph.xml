<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userGeneratorFragment"
    >

    <fragment
        android:id="@+id/userGeneratorFragment"
        android:name="com.example.tz_workmate.ui.user_generator.UserGeneratorFragment"
        android:label="fragment_user_generator"
        tools:layout="@layout/fragment_user_generator"
        >
        <action
            android:id="@+id/action_userGeneratorFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            />
        <action
            android:id="@+id/action_userGeneratorFragment_to_usersFragment"
            app:destination="@id/usersFragment"
            app:popUpTo="@id/userGeneratorFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.tz_workmate.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile"
        >
        <argument
            android:name="user"
            app:argType="com.example.domain.user_generator.model.User"
            />
    </fragment>
    <fragment
        android:id="@+id/usersFragment"
        android:name="com.example.tz_workmate.ui.users.UsersFragment"
        android:label="fragment_users"
        tools:layout="@layout/fragment_users"
        >
        <action
            android:id="@+id/action_usersFragment_to_userGeneratorFragment"
            app:destination="@id/userGeneratorFragment"
            />
        <action
            android:id="@+id/action_usersFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            />
    </fragment>
</navigation>